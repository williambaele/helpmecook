<div class="container mx-auto min-h-screen px-2">
  <div class="my-10">
    <h1 class="text-3xl font-medium text-center">All your publications</h1>
  </div>
  <% if @recipes.empty? %>
    <div class="grid justify-center gap-8">
      <h2>You don't have any publicatrions yet</h2>
      <%= link_to new_recipe_path do %>
        <p class="bg-orange-600 p-4 text-white text-center">Publish a recipe</p>
      <% end %>
    </div>
    <% else %>
    <% @recipes.each do |item| %>
      <div class="flex bg-gray-200 my-2 grid grid-cols-1 md:grid-cols-4 hover:shadow">
        <div class="col-span-1">
          <% if item.photo.key.nil? %>
            <img alt="recipe" src="https://images.unsplash.com/photo-1612709863934-3bf69d759c9a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=764&q=80" class="h-56 w-full object-cover"/>
          <% else %>
            <%= cl_image_tag item.photo.key, class:"h-56 w-full object-cover" %>
          <% end %>
        </div>
        <div class="col-span-3 p-4 relative">
          <div class="grid grid-rows-1 gap-4 md:content-center">
            <div>
              <h2 class="text-2xl md:text-3xl">
                <%= item.title %>
              </h2>
            </div>
            <div>
              <p class="text-left">
                <%= item.description.truncate(300)%>
              </p>
            </div>
            <div class="flex gap-4 justify-start">
              <div class="flex items-center gap-2 bg-orange-600 text-sm text-white px-2 py-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                  <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z"/>
                </svg>
                <%= item.people %>
              </div>
              <div class="flex items-center gap-2 bg-orange-600 text-sm text-white px-2 py-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-stopwatch-fill" viewBox="0 0 16 16">
                  <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07A7.001 7.001 0 0 0 8 16a7 7 0 0 0 5.29-11.584.531.531 0 0 0 .013-.012l.354-.354.353.354a.5.5 0 1 0 .707-.707l-1.414-1.415a.5.5 0 1 0-.707.707l.354.354-.354.354a.717.717 0 0 0-.012.012A6.973 6.973 0 0 0 9 2.071V1h.5a.5.5 0 0 0 0-1h-3zm2 5.6V9a.5.5 0 0 1-.5.5H4.5a.5.5 0 0 1 0-1h3V5.6a.5.5 0 1 1 1 0z"/>
                </svg>
                <%= item.time %>
              </div>
              <div class="flex items-center gap-2 bg-orange-600 text-sm text-white px-2 py-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-piggy-bank-fill" viewBox="0 0 16 16">
                  <path d="M7.964 1.527c-2.977 0-5.571 1.704-6.32 4.125h-.55A1 1 0 0 0 .11 6.824l.254 1.46a1.5 1.5 0 0 0 1.478 1.243h.263c.3.513.688.978 1.145 1.382l-.729 2.477a.5.5 0 0 0 .48.641h2a.5.5 0 0 0 .471-.332l.482-1.351c.635.173 1.31.267 2.011.267.707 0 1.388-.095 2.028-.272l.543 1.372a.5.5 0 0 0 .465.316h2a.5.5 0 0 0 .478-.645l-.761-2.506C13.81 9.895 14.5 8.559 14.5 7.069c0-.145-.007-.29-.02-.431.261-.11.508-.266.705-.444.315.306.815.306.815-.417 0 .223-.5.223-.461-.026a.95.95 0 0 0 .09-.255.7.7 0 0 0-.202-.645.58.58 0 0 0-.707-.098.735.735 0 0 0-.375.562c-.024.243.082.48.32.654a2.112 2.112 0 0 1-.259.153c-.534-2.664-3.284-4.595-6.442-4.595Zm7.173 3.876a.565.565 0 0 1-.098.21.704.704 0 0 1-.044-.025c-.146-.09-.157-.175-.152-.223a.236.236 0 0 1 .117-.173c.049-.027.08-.021.113.012a.202.202 0 0 1 .064.199Zm-8.999-.65a.5.5 0 1 1-.276-.96A7.613 7.613 0 0 1 7.964 3.5c.763 0 1.497.11 2.18.315a.5.5 0 1 1-.287.958A6.602 6.602 0 0 0 7.964 4.5c-.64 0-1.255.09-1.826.254ZM5 6.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"/>
                </svg>
                <%= item.budget %>
              </div>
              <div class="flex items-center gap-2 bg-orange-600 text-sm text-white px-2 py-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                </svg>
                <%= (item.comments.average(:rating)).to_i %>
              </div>
            </div>
          </div>
          <%= link_to edit_recipe_path(item) do %>
            <div class="bg-orange-600 absolute top-0 right-0 p-1.5 md:p-2 md:px-4 text-white font-medium cursor-pointer">Edit</div>
          <% end %>
        </div>
      </div>
    <% end %>
  <%end %>
</div>
