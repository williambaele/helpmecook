<section class="min-h-screen flex flex-col">
  <div class="flex flex-1 items-center justify-center">
      <div class="rounded-lg sm:border-2 px-4 lg:px-24 py-16 lg:max-w-xl sm:max-w-md w-full text-center">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <h1 class="font-bold tracking-wider text-3xl mb-8 w-full text-gray-900">
                  Sign in
              </h1>
              <div class="py-2 text-left">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email@helpmecook.com", class:"bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700" %>
              </div>
              <div class="py-2 text-left">
                <%= f.password_field :password, autocomplete: "current-password", placeholder:"••••••••••", class:"bg-gray-200 border-2 border-gray-100 focus:outline-none bg-gray-100 block w-full py-2 px-4 rounded-lg focus:border-gray-700" %>
              </div>
              <div class="py-2 actions">
                <%= f.submit "Log in", class:"cursor-pointer border-2 border-gray-100 focus:outline-none bg-orange-600 text-white font-bold tracking-wider block w-full p-2 rounded-lg focus:border-gray-700 hover:bg-orange-500" %>
              </div>
          <% end %>
          <div class="text-center">
              <a href="#" class="hover:underline">Forgot password?</a>
          </div>
          <div class="text-center mt-6">
              <span>
                <%= link_to new_user_registration_path do %>
                  Don't have an account?
                <% end %>
              </span>
          </div>
      </div>
  </div>
</section>
